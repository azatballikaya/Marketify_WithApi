
@{
    Layout = null;
    bool isAdmin = User.IsInRole("Admin");
}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/Admin/User/EditProfile" class="brand-link">
        <img src="~/AdminLTE-3.2.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Profilimi Düzenle</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/AdminLTE-3.2.0/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <span href="#" class="text-white d-block">@User.Identity.Name</span>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                @if (isAdmin)
                {
                    
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fa-solid fa-user"></i>
                        <p>
                           Üye Yönetimi
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Admin/User/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Üyeler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/User/IsntApproved" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Onay Bekleyenler</p>
                            </a>
                        </li>
                        
                    </ul>
                </li>
                }
                <li class="nav-item">
                    <a href="/Admin/Post/Index" class="nav-link">
                        <i class="nav-icon fas fa-edit"></i>
                        <p>
                           @(isAdmin ? "Tüm Gönderiler" : "Gönderilerim")
                           
                        </p>
                    </a>
                 
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fa-brands fa-shopify"></i>
                        <p>
                            Teklifler
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Admin/Offer/IncomingOffers" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Gelen Teklifler</p>
                            </a>
                        </li>

                    </ul>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Admin/Offer/MadeOffers" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Yapılan Teklifler</p>
                            </a>
                        </li>

                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Chat/Index" class="nav-link">
                        <i class="fa-solid fa-message"></i>
                        <p>
                            Mesajlar
                            
                        </p>
                    </a>
                 
                </li>
                <li class="nav-item">
                    <a href="/Login/Logout" class="nav-link">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <p>
                            Çıkış Yap

                        </p>
                    </a>

                </li>
               
               
                
               
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>