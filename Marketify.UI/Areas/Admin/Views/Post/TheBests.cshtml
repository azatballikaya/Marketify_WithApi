@model List<ResultPostViewModel>
<div class="feed-container">
    <!-- Max Clicked Post -->
    <div class="post">
      
        @for (int i = 0; i < Model.Count(); i++)
        {
            <hr />
            <div class="post-header">
                
           <h1 class="text-success">@(i==0 ? "En Çok Teklif Alan" : "En Çok Görüntülenen")</h1>
           <hr />
            <h3>@Model[i].User.userName</h3>
        </div>
        <div class="post-body">
            <img src="~/img/@Model[i].ImageUrl" alt="Post Image">
            <p>@Model[0].Description</p>
        </div>
        <div class="post-footer">
      
            <h5 class="text-warning">Toplam Görüntülenme: @Model[i].ClickCount</h5>
            <h5 class="text-warning">Teklif Sayısı : @Model[i].Offers.Count</h5>
        </div>
            }
            
    </div>

 

</div>