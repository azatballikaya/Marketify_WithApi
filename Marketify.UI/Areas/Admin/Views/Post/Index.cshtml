@model IEnumerable<ResultPostViewModel>
<a href="/Admin/Post/CreatePost" class="btn btn-primary ml-2 mb-2">Yeni Gönderi</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Teklif Sayısı</th>
            <th>Resim</th>
            <th>Tarih</th>
            <th>#</th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            


            <tr>
                <td width="150">@item.Id</td>
                <td width="200">@item.Title</td>
                <td width="150">@item.Category</td>
                <td width="150">@item.Price</td>
                <td width="150">@item.Offers.Count()</td>
                <td width="200"><img src="~/img/@item.ImageUrl" style="height:125px;width:200px" /></td>
                <td width="300">@item.CreatedDate</td>
               <td><a class="btn btn-info" href="/Admin/Post/GetPost/@item.Id">Detay</a>
                    @if(User.Identity.Name == item.User.userName)
                    {
                    <a class="btn btn-warning" href="/Admin/Post/Edit/@item.Id">Düzenle</a>
                        
                    }
                   <a class="btn btn-danger" href="/Admin/Post/Delete/@item.Id">Sil</a></td>

            </tr>

        }
    </tbody>
</table>